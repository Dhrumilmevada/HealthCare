<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/header_background_3"
    android:layout_height="150dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_signup_nav_header"
        android:text="@string/signup"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_slash_nav_header"
        android:text="@string/slash"
        android:textColor="@color/white"
        android:layout_toStartOf="@id/txt_signup_nav_header"
        android:layout_marginStart="5dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_alignTop="@id/txt_signup_nav_header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_login_nav_header"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_toStartOf="@id/txt_slash_nav_header"
        android:layout_alignTop="@id/txt_signup_nav_header"
        android:clickable="true"
        />


</RelativeLayout>