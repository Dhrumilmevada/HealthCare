<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_lay_patient_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.dhrumil.healthcare.login.LoginActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.37"
        android:id="@+id/rel_lay_patient_edit_top"
        android:background="#22000000">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/cir_img_patient_edit"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            app:civ_circle_background_color="@color/white"
            android:src="@mipmap/ic_perm_identity_black_24dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.63"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/rel_lay_patient_edit_bottom"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_name_patient_edit"
                android:textSize="22sp"
                android:hint="@string/name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_phone_patient_edit"
                android:layout_below="@id/edt_name_patient_edit"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:hint="@string/phone_no"
                android:inputType="phone"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_date_of_birth_patient_edit"
                android:hint="@string/date_of_birth"
                android:layout_below="@id/edt_phone_patient_edit"
                android:clickable="true"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rdo_grp_gender"
                android:layout_marginTop="5dp"
                android:layout_below="@id/txt_date_of_birth_patient_edit"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdo_btn_male"
                    android:text="@string/male"
                    android:layout_marginEnd="10dp"
                    android:textSize="22sp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rdo_btn_female"
                    android:text="@string/female"
                    android:textSize="22sp"/>
            </RadioGroup>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_address_patient_edit"
                android:hint="@string/address"
                android:textSize="22sp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/rdo_grp_gender"
                android:inputType="textMultiLine"
                android:lines="6"
                android:minLines="4"
                android:maxLines="8"
                android:scrollbars="vertical"
                android:gravity="top|start"/>
            <TextView
                android:layout_width="82dp"
                android:layout_height= "wrap_content"
                android:id="@+id/txt_height_patient_edit"
                android:hint="@string/height"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:layout_below="@id/edt_address_patient_edit"
                />
            <Spinner
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:id="@+id/spin_feet_patient_edit"
                android:layout_toEndOf="@id/txt_height_patient_edit"
                android:layout_alignTop="@id/txt_height_patient_edit"
                android:textSize="22sp"
                >
            </Spinner>
            <TextView
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_feet_patient_edit"
                android:layout_toEndOf="@id/spin_feet_patient_edit"
                android:layout_alignTop="@id/spin_feet_patient_edit"
                android:hint="@string/feet"
                android:textSize="22sp"
                />
            <Spinner
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:id="@+id/spin_inch_patient_edit"
                android:layout_toEndOf="@id/txt_feet_patient_edit"
                android:layout_alignTop="@id/txt_feet_patient_edit"
                android:textSize="22sp"
               >
            </Spinner>
            <TextView
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_inch_patient_edit"
                android:layout_toEndOf="@id/spin_inch_patient_edit"
                android:layout_alignTop="@id/spin_inch_patient_edit"
                android:hint="@string/inch"
                android:textSize="22sp"
               />

            <TextView
                android:layout_width="85dp"
                android:layout_height= "wrap_content"
                android:id="@+id/txt_weight_patient_edit"
                android:hint="@string/weight"
                android:layout_below="@id/txt_height_patient_edit"
                android:textSize="22sp"
                android:layout_marginTop="5dp"/>
            <Spinner
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:id="@+id/spin_weight_patient_edit"
                android:layout_toEndOf="@id/txt_weight_patient_edit"
                android:layout_alignTop="@id/txt_weight_patient_edit"
                android:layout_marginStart="25dp"
                android:textSize="22sp"
                >
            </Spinner>
            <TextView
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_kilo_patient_edit"
                android:layout_toEndOf="@id/spin_weight_patient_edit"
                android:layout_alignTop="@id/spin_weight_patient_edit"
                android:hint="@string/kilo"
                android:textSize="22sp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edt_past_disease"
                android:layout_below="@+id/txt_weight_patient_edit"
                android:hint="@string/past_disease"
                android:inputType="textMultiLine"
                android:lines="3"
                android:scrollbars="vertical"
                android:gravity="start|top"
                android:textSize="22sp"
                android:layout_marginTop="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_update_patient_edit"
                android:layout_below="@id/edt_past_disease"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:text="@string/ok"
                android:textSize="22sp"
                android:layout_marginTop="15dp"/>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>