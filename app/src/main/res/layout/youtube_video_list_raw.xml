<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_row_youtube_video_list"
    android:padding="8dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_lay_raw_video_list">
        <com.google.android.youtube.player.YouTubeThumbnailView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/thumbnail_youtube_video"
            android:contentDescription="@string/youtube_video_thumbnail"
            android:scaleType="center"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_video_title"
                android:layout_marginStart="7dp"
                android:layout_marginTop="5dp"
                android:textSize="24sp"
                android:textStyle="bold"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_video_duration"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="2dp"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
               />
       </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>