<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view_row_news"
    android:padding="8dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_lay_row_news_1"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/cir_img_thumbnail"
            android:src="@mipmap/ic_perm_identity_black_24dp"
            app:civ_border_width="1dp"
            app:civ_border_overlay="true"
            app:civ_border_color="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rel_lay_row_news_2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_news_title"
                android:textSize="18sp"
                android:maxLength="65"
                android:text="@string/title"
                android:textStyle="bold"
                android:layout_marginStart="2dp" />
            <com.github.curioustechizen.ago.RelativeTimeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_publish_time"
                android:textSize="12sp"
                android:text="@string/time"
                android:textStyle="italic"
                android:layout_marginBottom="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"/>


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>